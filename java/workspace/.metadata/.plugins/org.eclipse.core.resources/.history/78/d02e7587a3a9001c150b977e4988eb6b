package test2_1;

public class Test2 {
	public static void main(String[] args) {
		//2번문제 
		int total=0;
		int average=0;
		
		int[][] arr = {

				{ 5, 5, 5, 5, 5},

				{10,10,10,10,10},

				{20,20,20,20,20},

				{30,30,30,30,30}};
		for (int i = 0; i < arr.length; i++) {
			for (int j = 0; j < arr.length; j++) {
				total += arr[i][j];
				average = total/arr[i].length * arr[j].length;
				
				System.out.println(arr[i].length);
			}
			
		}
		System.out.println(total);
		System.out.println(average);
		
	}
}
